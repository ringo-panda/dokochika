<div class="row">
  <div class="col-md-10">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>id</th>
          <th>ユーザー名</th>
          <th>メールアドレス</th>
          <th>パスワード</th>
        </tr>
      </thead>
      <tbody>
        <% User.all.each do |user| %>
          <tr>
            <td>
              <%= user.id %>
            </td>
            <td>
              <%= user.username %>
            </td>
            <td>
              <%= user.email %>
            </td>
            <td>
              <%= user.password %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
