
<div class="row mb-4">
  <div class="col-sm-3">
    <h2>新規登録</h2>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row mb-3">
    <div class="form-label col-sm-3">
      <%= f.label :username do %>
        <span class="badge bg-danger">必須</span> ニックネーム
      <% end %>
    </div>
    <div class="col-sm-5">
      <%= f.text_field :username, autocomplete: "username", class:"form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="form-label col-sm-3">
      <%= f.label :email do %>
        <span class="badge bg-danger">必須</span> メールアドレス
      <% end %>
    </div>
    <div class="col-sm-5">
      <%= f.email_field :email, autocomplete: "email", class:"form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="form-label col-sm-3">
      <%= f.label :password do %>
        <% if @minimum_password_length %>
          <span class="badge bg-danger">必須</span> <%= "パスワード(#{@minimum_password_length}文字以上)" %>
        <% else %>
          <span class="badge bg-danger">必須</span> パスワード
        <% end %>
      <% end %>
    </div>
    <div class="col-sm-5">
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="form-label col-sm-3">
      <%= f.label :password_confirmation do %>
        <span class="badge bg-danger">必須</span> パスワード(確認用)
      <% end %>
    </div>
    <div class="col-sm-5">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",  class:"form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <%= f.submit "新規登録", class:"btn btn-success col-sm-4 offset-sm-3" %>
  </div>
<% end %>
