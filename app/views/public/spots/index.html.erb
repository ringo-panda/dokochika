<div class="row">
  <%= form_with url:search_spots_path, method: :get, local: true do |f| %>
    <%= f.text_field :search_keyword %>
    <%= f.submit "検索", class:"btn btn-primary" %>
  <% end %>

  <% if @result_spots.blank? %>
    <% @spots.each do |spot| %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= spot.name %></h5>
          <p class="card-text"><%= spot.formatted_address %></p>
          <%= link_to "編集", edit_spot_path(spot.id), class:"btn btn-success" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <% @result_spots[:results].each do |spot| %>
      <div class="card" style="width: 18rem;">
        <%= image_tag place_photo(spot[:photos][0][:photo_reference]), class:"card-img-top", size: '262x175' %>
        <div class="card-body">
          <h5 class="card-title"><%= spot[:name] %></h5>
          <p class="card-text"><%= spot[:formatted_address] %></p>
          <% @spot = judge_present_place(spot[:place_id]) %>
          <% if @spot == nil %>
          <%= link_to "登録", new_spot_path(spot[:place_id]), class:"btn btn-primary" %>
          <% else %>
          <%= link_to "編集", edit_spot_path(@spot), class:"btn btn-success" %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
