<div class="row">
  <div class="col-md-7">

  </div>
  <div class="col-md-5">
    <div class="row">
      <div class="col-md-12">
        <div class="list-group">
          <% @lists.each do |post| %>
            <%= link_to list_path(post), class:"list-group-item d-flex justify-content-between align-items-center" do  %>
              <%= post.name %>
              <span class="badge bg-secondary rounded-pill">14</span>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <%= form_with model:@list do |f| %>
          <%= f.label :name, "リスト名", class:"form-label" %>
          <%= f.text_field :name, class:"form-control" %>
          <%= f.submit "保存する", class:"btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
